{
  "version": "1.0",
  "description": "Azure WAF Scanner Configuration",
  
  "excludedPillars": [
  ],
  
  "excludedChecks": [
  ],
  
  "customThresholds": {
    "security": {
      "certificateExpiryDaysWarning": 30,
      "certificateExpiryDaysCritical": 7,
      "passwordRotationDays": 90,
      "unusedKeyVaultSecretDays": 180
    },
    "costOptimization": {
      "monthlyBudgetWarningPercent": 80,
      "monthlyBudgetCriticalPercent": 95,
      "unusedResourceAgeDays": 30,
      "underutilizedCpuPercent": 10,
      "underutilizedMemoryPercent": 20
    },
    "reliability": {
      "backupRetentionDays": 30,
      "maxRpoHours": 24,
      "minAvailabilityZones": 2
    },
    "performance": {
      "vmCpuThresholdPercent": 80,
      "diskIopsThreshold": 5000,
      "networkThroughputMbps": 1000
    },
    "operationalExcellence": {
      "logRetentionDays": 90,
      "alertResponseTimeMinutes": 15
    }
  },
  
  "resourceFilters": {
    "excludeTags": [
      "Environment=Dev",
      "Temporary=True",
      "DoNotScan=True"
    ],
    "includeTags": [
    ],
    "excludeResourceGroups": [
      "NetworkWatcherRG",
      "DefaultResourceGroup-*",
      "cloud-shell-storage-*"
    ],
    "includeResourceGroups": [
    ],
    "excludeResourceTypes": [
    ]
  },
  
  "performance": {
    "parallelSubscriptions": true,
    "maxParallelism": 5,
    "timeoutSeconds": 300,
    "retryAttempts": 3,
    "retryDelaySeconds": 5,
    "exponentialBackoff": true
  },
  
  "caching": {
    "enabled": true,
    "durationMinutes": 30,
    "cachePath": "./.cache",
    "cacheResourceGraph": true,
    "cacheAdvisor": true,
    "cacheDefender": true
  },
  
  "reporting": {
    "obfuscateSensitiveData": false,
    "includeRemediationScripts": true,
    "includeComplianceMappings": true,
    "includeBaselineComparison": true,
    "outputFormats": ["html", "json", "csv"],
    "outputPath": "./waf-output"
  },
  
  "compliance": {
    "frameworks": {
      "cis": {
        "enabled": true,
        "version": "1.5.0"
      },
      "iso27001": {
        "enabled": true
      },
      "nist": {
        "enabled": false
      },
      "pci-dss": {
        "enabled": false
      }
    }
  },
  
  "notifications": {
    "enabled": false,
    "channels": {
      "email": {
        "enabled": false,
        "recipients": ["security@company.com"],
        "smtpServer": "smtp.office365.com",
        "smtpPort": 587,
        "useSsl": true
      },
      "teams": {
        "enabled": false,
        "webhookUrl": "https://outlook.office.com/webhook/..."
      },
      "slack": {
        "enabled": false,
        "webhookUrl": "https://hooks.slack.com/services/..."
      }
    }
  },
  
  "advanced": {
    "debugMode": false,
    "verboseLogging": false,
    "includeResourceMetadata": true,
    "generateRemediationScripts": true,
    "maxResourcesPerCheck": 1000
  }
}
